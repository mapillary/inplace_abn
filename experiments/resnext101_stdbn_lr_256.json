{
  "network": {
    "arch": "resnext101",
    "activation": "leaky_relu",
    "leaky_relu_slope": 0.01,
    "input_3x3": true,
    "bn_mode": "standard"
  },
  "optimizer": {
    "batch_size": 256,
    "clip": 0,
    "learning_rate": 0.1,
    "nesterov": true,
    "schedule": {
      "type": "step",
      "epochs": 90,
      "params": {
        "step_size": 30
      }
    }
  },
  "input": {
    "color_jitter_train": true,
    "lighting_train": true
  }
}